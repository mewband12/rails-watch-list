<h2 data-aos="zoom-out-right" data-aos-duration="100000">bookmarks:</h2>
<% if @list.bookmarks.any? %>
<div class="container">
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
    <% @list.bookmarks.each_with_index do |bookmark, index| %>
      <% if index == 0 %>
        <div class="carousel-item active">
      <% else %>
        <div class="carousel-item">
      <% end %>
      <div class="card-hello">
        <%= image_tag bookmark.movie.poster_url , width: '200px'%>
          <div class="card-hello-info">
            <h1><%= bookmark.movie.title %></h5>
            <p><%= bookmark.movie.overview %></p>
            <h2>Comments:</h2> <p> <%= bookmark.comment %> <%= link_to "ðŸ—‘", bookmark_path(bookmark.id), method: :delete, data: { confirm: "Really delete #{bookmark.movie.title}?" } %></p>
          </div>
          </div>
      </div>
    <% end %>
    </div>

    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<% else %>
<p> Be the first to bookmark...</p>
<% end %>

