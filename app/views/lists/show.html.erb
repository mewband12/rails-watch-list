<html>
<nav class="navbar navbar-light bg-light">
  <%= link_to "Home",  lists_path, class: "navbar-brand"%>
  <%= link_to "create tasks",  new_list_path , class:"mr-sm-2 navbar-brand"%>
</nav>
<div class = "d-flex flex-column justify-content-center ">
  <div class = "containerr p-2" style= "box-shadow: 0 1px 1px -1px gray">
    <h1><%= @list.name %></h1>
  </div>
  <div class ="p-2">
    <%= link_to "Bookmark", new_list_bookmark_path(@list) %>
  </div>
  <div class ="p-2">
    <% if @list.bookmarks.any? %>
    <p>
      <strong>bookmarks:</strong>
    <ul>
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card">
          <%= image_tag bookmark.movie.poster_url , width: '100px'%>
          <h1><%= bookmark.movie.title %></h1>
          <p><%= bookmark.movie.overview %></p>
          <h2>Comments:</h2> <p> <%= bookmark.comment %></p>
          <%= link_to "ðŸ—‘", bookmark_path(bookmark.id), method: :delete, data: { confirm: "Really delete #{bookmark.movie.title}?" } %>
      </div>
    <% end %>
    </ul>
    </p>
    <% else %>
    <p> Be the first to bookmark...</p>
    <% end %>
  </div>
</div>

<div class="container">
<div id="carouselExampleControlsNoTouching" class="carousel slide" data-bs-touch="false" data-bs-interval="false">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="https://cdn.pixabay.com/photo/2015/04/23/22/00/tree-736885__480.jpg" class="d-block w-100" alt="asd">
    </div>
    <div class="carousel-item">
      <img src="..." class="d-block w-100" alt="da">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
</div>
</html>

